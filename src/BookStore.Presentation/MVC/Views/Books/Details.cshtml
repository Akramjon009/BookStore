@using BookStore.Domain.Entities
@model Book

<div class="row">
    <div class="col p-0">
        <h1><b>Properties</b></h1>
        <hr />
        <h1>Id</h1>
        <h1>Title</h1>
        <h1>Description</h1>
        <h1>AuthorID</h1>

        <h2>Genres</h2>

    </div>

    <div class="col p-0">
        <h1><b>Values</b></h1>
        <hr />
        <h1>@Model.Id</h1>
        <h1>@Model.Title</h1>
        <h1>@Model.Description</h1>
        <h1>@Model.AuthorId</h1>
    </div>
</div>

        <h2>
            @for(int i = 0; i< @Model.Genres.Count; i++)
            {
                if(i != 0)
                {
                    <span>,</span>
                }

                <a href="#">@Model.Genres[i].Name</a>
            }
        </h2>
    </div>
</div>

